{
  "name": "awaitly-mongo",
  "version": "17.0.0",
  "type": "module",
  "description": "MongoDB persistence adapter for awaitly workflows",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint .",
    "clean": "rm -rf dist",
    "quality": "pnpm type-check && pnpm test && pnpm lint"
  },
  "keywords": [
    "awaitly",
    "workflow",
    "persistence",
    "mongodb",
    "mongo",
    "database",
    "durable-execution"
  ],
  "author": "Jag Reehal <jag@jagreehal.com>",
  "homepage": "https://github.com/jagreehal/awaitly#readme",
  "bugs": {
    "url": "https://github.com/jagreehal/awaitly/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jagreehal/awaitly.git"
  },
  "license": "MIT",
  "peerDependencies": {
    "awaitly": "workspace:^"
  },
  "dependencies": {
    "mongodb": "^7.1.0"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.6.1",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/node": "^25.2.3",
    "awaitly": "workspace:^",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=22"
  }
}
