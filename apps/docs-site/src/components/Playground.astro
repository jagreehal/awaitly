---
/**
 * Playground.astro - Astro wrapper for the WorkflowPlayground component
 *
 * Uses client:only="preact" for lazy hydration since this component
 * depends entirely on browser APIs (CodeMirror, Mermaid, WASM).
 */

import WorkflowPlayground from './WorkflowPlayground';

interface Props {
  /** Initial code to display in the editor */
  code?: string;
  /** Height of the playground (default: 500px) */
  height?: string;
  /** Whether to show the code editor (default: true) */
  showEditor?: boolean;
}

const { code, height = '500px', showEditor = true } = Astro.props;
---

<WorkflowPlayground
  client:only="preact"
  initialCode={code}
  height={height}
  showEditor={showEditor}
/>
